<!-- Material form login -->

<div class="text-center"> <a href="/" class="btn btn-info">HOME</a></div>
<div class="card">

  <h5 class="card-header info-color white-text text-center py-4">
    <strong>EDIT</strong>
  </h5>

  <!--Card content-->
  <div class="card-body px-lg-5 pt-0">

   
    <form action="/api/<%= data.id %>?_method=PATCH" method="POST" class="text-center" style="color: #757575;" autocomplete="off" >

      <!-- UserName -->
      <div class="md-form">
        <input type="text" name="name" placeholder="enter name" value="<%= data.name %>" id="materialLoginFormUsername" class="form-control">
       
      </div>

      <!-- Email -->
      <div class="md-form">
        <input type="email" name="email" placeholder="enter email" value="<%= data.email %>"  id="materialLoginFormEmail" class="form-control">
        
      </div>

      <div class="md-form">
        <input type="text" name="number" placeholder="enter number" value="<%= data.number %>"  id="materialLoginFormNumber" class="form-control">
        
      </div>


      <div class="d-flex justify-content-around">
        <div>
          
          
        </div>
        
      </div>

      <!-- Sign in button -->
      <button class="btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0" type="submit">Enter</button>



      
      
    </form>
    <!-- Form -->

  </div>

</div>
<!-- Material form login -->